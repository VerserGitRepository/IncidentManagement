<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Incident Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            @*<h4>Verser Technology - Ticket Management</h4>*@
            
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.Label("VERSER TICKET MANAGEMENT", new { @class = "navbar-brand" })
                </div>
                <script src="~/Scripts/respond.js"></script>
                <div class="navbar-collapse collapse">
                @if (Session["FullUserName"] != null)
                {
                    <ul class="nav navbar-nav">
                      @*<li>@Html.ActionLink("Home", "Index", "Incidents")</li>
                     @Html.ActionLink("HOME", "Index", "Incidents", new { area = "" }, new { @class = "navbar-brand" })</li> *@
                        <li style="font-size:large;color:white;font-weight:300"> @Html.ActionLink("HOME", "Index", "Incidents")</li>
                        <li style="font-size:large;color:white;font-weight:300">@Html.ActionLink("REGISTER INCIDENT", "Create", "Incidents")</li>
                    </ul>
                    <ul class="nav navbar-nav" style="float:right">
                        <li style="font-size:medium;color:white;font-weight:100;float:right">@Html.ActionLink("Logout", "Logout", "Login")</li>
                    </ul>
                 }
                </div>            
        </div>
    </div>
   
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Verser Technology LifeCycles</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<style>
    .navbar-inverse {
        background-color: gray !important;
        border-color: #FFFFFF !important;
    }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
            font-family: sans-serif;
            font-weight: 600;
        }

            .navbar-inverse .navbar-nav > li > a:hover {
                background-color: #1372AB !important;
                color: #FFFFFF;
            }

    a {
        color: #959ca1;
    }

    .navbar, .navbar div {
        min-height: 40px;
        max-height: 60px;
        height: 50px;
        /*// margin-left: 60px;*/
    }
    /* Additional styles to style some of your child elements */
    .navbar-brand {
        padding: 10px;
    }

    .navbar .navbar-toggle {
        padding: 4px 10px;
    }
</style>