@model IEnumerable<IncidentManagement.Models.Incident>
@using System.Linq;
@using System.Data.Entity;
@using IncidentManagement.HelperServices;
@{
    ViewBag.Title = "Incident Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
